# ---------------------------
# 1️⃣ Sample Data Creation
# ---------------------------
import pandas as pd

# Sample transaction data
data = {
    "shop_id": [101, 102, 103, 101, 102, 104, 105],
    "beneficiary_id": [1001, 1002, 1003, 1001, 1002, 1004, 1005],
    "quantity": [5, 10, 7, 5, 10, 15, 8],
    "date": ["2026-01-10","2026-01-10","2026-01-10","2026-01-11","2026-01-11","2026-01-12","2026-01-12"]
}

df = pd.DataFrame(data)
df.to_csv("transactions.csv", index=False)

transactions = pd.read_csv("transactions.csv")
print("Sample transactions loaded:")
print(transactions)

# ---------------------------
# 2️⃣ ML Logic (Simple Hackathon Version)
# ---------------------------
# Suspicious shops: shops appearing more than once with same beneficiary
suspicious_shops = transactions.groupby("shop_id").filter(lambda x: x['beneficiary_id'].duplicated().any())['shop_id'].unique().tolist()

# Suspicious beneficiaries: beneficiaries appearing more than once
suspicious_beneficiaries = transactions.groupby("beneficiary_id").filter(lambda x: len(x) > 1)['beneficiary_id'].unique().tolist()

# Future anomaly prediction (simple regression example)
from sklearn.linear_model import LinearRegression
import numpy as np

# Prepare data: day number vs quantity per shop
transactions['day_num'] = pd.to_datetime(transactions['date']).dt.day
X = transactions[['day_num']].values
y = transactions['quantity'].values
model = LinearRegression()
model.fit(X, y)

# Predict next day anomaly
next_day = np.array([[max(transactions['day_num']) + 1]])
future_quantity = int(model.predict(next_day)[0])

print("Suspicious Shops:", suspicious_shops)
print("Suspicious Beneficiaries:", suspicious_beneficiaries)
print("Future Quantity Prediction (next day):", future_quantity)

# ---------------------------
# 3️⃣ Backend Flask APIs
# ---------------------------
from flask import Flask, jsonify
from flask_ngrok import run_with_ngrok  # Works in Colab

app = Flask(__name__)
run_with_ngrok(app)  # starts ngrok automatically

@app.route("/")
def home():
    return "PDS Monitoring API is running!"

@app.route("/suspicious_shops")
def get_suspicious_shops():
    return jsonify({"suspicious_shops": suspicious_shops})

@app.route("/suspicious_beneficiaries")
def get_suspicious_beneficiaries():
    return jsonify({"suspicious_beneficiaries": suspicious_beneficiaries})

@app.route("/future_quantity")
def get_future_quantity():
    return jsonify({"predicted_quantity_next_day": future_quantity})

# Run Flask app
if __name__ == "__main__":
    app.run()
